<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.smolblackcat.Progress</id>
  <name>Progress</name>
  <summary>Kanban-style task organiser</summary>
  <developer id="io.github.smolblackcat">
    <name>Gabriel de Moura</name>
  </developer>

  <url type="homepage">https://github.com/smolBlackCat/progress-tracker</url>

  <metadata_license>MIT</metadata_license>
  <project_license>MIT</project_license>

  <branding>
    <color type="primary" scheme_preference="light">#889bc8</color>
    <color type="primary" scheme_preference="dark">#161846</color>
  </branding>

  <content_rating type="oars-1.1" />

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/smolBlackCat/progress-tracker/main/pictures/progress-light1.png</image>
      <caption>Board Grid</caption>
    </screenshot>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/smolBlackCat/progress-tracker/main/pictures/progress-light2.png</image>
      <caption>Board view</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/smolBlackCat/progress-tracker/main/pictures/progress-dark1.png</image>
      <caption>Board Grid</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/smolBlackCat/progress-tracker/main/pictures/progress-dark2.png</image>
      <caption>Board view</caption>
    </screenshot>
  </screenshots>

  <description>
    <p>
      Progress is a simple application that organises your tasks on a board and
      allows the user to put them into different card lists across the board.
    </p>
  </description>
  <categories>
    <category>ProjectManagement</category>
    <category>Office</category>
  </categories>

  <releases>
    <release date="2024-04-01" version="1.1">
      <description>
        <p>Bug Fixes and Improvements</p>
        <ul>
          <li>Board grid UI enhance</li>
          <li>Fix segmentation fault error when moving cards onto themselves</li>
          <li>Progress is better integrated on GNOME systems</li>
          <li>Add Dutch translation</li>
          <li>Add Italian translation</li>
          <li>Add Spanish translation</li>
        </ul>
      </description>
    </release>
    <release date="2024-03-16" version="1.0">
      <description>
        <p>
          First official release of Progress 1.0
        </p>
      </description>
    </release>
  </releases>

  <launchable type="desktop-id">io.github.smolblackcat.Progress.desktop</launchable>
</component>
